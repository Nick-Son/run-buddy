<%= form_with(model: profile, local: true) do |form| %>
  <% if profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, id: :profile_first_name %>
  </div>

  <div class="field">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, id: :profile_last_name %>
  </div>

  <div class="field">
    <%= form.label :postcode %>
    <%= form.text_field :postcode, id: :profile_postcode %>
  </div>

  <div class="field">
    <%= form.label :bio %>
    <%= form.text_area :bio, id: :profile_bio %>
  </div>

  <%= form.fields_for :activities do |activities_form| %>
    <div class="field">
      <%= activities_form.label :activity, 'What kind of exercise would you like a buddy for?' %>
      <%= activities_form.select :name, options_for_select(["Walking", "Hiking", "Jogging", "Running", "Sprinting", "Long Distance", "Pram"], selected: "Jogging") %>
    </div>
    <div class="field">
      <%= activities_form.label :skill_level, 'What is your current skill level?' %>
      <%= activities_form.select :skill_level, options_for_select(["Beginner", "Intermediate", "Advanced", "Expert"], selected: "Beginner") %>
    </div>
  <% end %>


  <div class="field">
    <%= form.label :contact_number %>
    <%= form.text_field :contact_number, id: :profile_contact_number %>
  </div>

  <div class="field">
    <%= form.label :profile_photo %>
    <%= form.file_field :profile_photo, id: :profile_profile_photo %>
  </div>

  <% if profile.profile_photo_data? %>
    <div class="field">
      <%= image_tag profile.profile_photo_url(:thumb) %>
    </div>
    <div class="field">
      Remove attachment: <%= form.check_box :remove_image %>
    </div>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
