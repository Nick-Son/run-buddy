<%= form_with(model: activity, local: true) do |form| %>
  <% if activity.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(activity.errors.count, "error") %> prohibited this activity from being saved:</h2>

      <ul>
      <% activity.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, 'Preferred exercise type' %>
    <%= form.select :name, options_for_select(["Walking", "Hiking", "Jogging", "Running", "Sprinting", "Long Distance", "Pram"], selected: @activity.name), id: :activity_name %>
  </div>

  <div class="field">
    <%= form.label :skill_level %>
    <%= form.select :skill_level, options_for_select(["Beginner", "Intermediate", "Advanced", "Expert"], selected: @activity.skill_level), id: :activity_skill_level %>
  </div>
  
  <div class="actions">
    <%= form.submit %>
  </div>
  
<% end %>
